<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Delivery Address -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="ðŸ“ Delivery Address"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/selected_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No address selected"
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:padding="4dp" />

                <Button
                    android:id="@+id/btn_select_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select / Add Address" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Payment Options -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="ðŸ’³ Payment Method"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/payment_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/payment_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Debit / Credit Card" />

                    <RadioButton
                        android:id="@+id/payment_upi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UPI" />

                    <RadioButton
                        android:id="@+id/payment_cod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cash on Delivery" />
                </RadioGroup>

                <!-- Card Form -->
                <LinearLayout
                    android:id="@+id/card_form"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_marginTop="8dp"
                    android:background="#F1F1F1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_card_number"
                        android:hint="Card Number (16 digits)"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/et_expiry"
                        android:hint="Expiry (MM/YY)"
                        android:layout_marginTop="8dp"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/et_cvv"
                        android:hint="CVV"
                        android:layout_marginTop="8dp"
                        android:inputType="numberPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- UPI Form -->
                <LinearLayout
                    android:id="@+id/upi_form"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_marginTop="8dp"
                    android:background="#F1F1F1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_upi"
                        android:hint="example@upi"
                        android:inputType="textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <!-- QR Image -->
                    <ImageView
                        android:id="@+id/upi_qr"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:scaleType="fitCenter"
                        android:visibility="gone"
                        android:contentDescription="UPI QR Code"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bill Summary -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="ðŸ§¾ Bill Summary"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp">
                    <TextView android:text="Subtotal" android:layout_weight="1"
                        android:layout_width="0dp" android:layout_height="wrap_content" android:textSize="16sp"/>
                    <TextView android:id="@+id/tv_subtotal"
                        android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="â‚¹0.0"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp">
                    <TextView android:text="Discount" android:layout_weight="1"
                        android:layout_width="0dp" android:layout_height="wrap_content" android:textSize="16sp"/>
                    <TextView android:id="@+id/tv_discount"
                        android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="â‚¹0.0"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp">
                    <TextView android:text="Delivery Fee" android:layout_weight="1"
                        android:layout_width="0dp" android:layout_height="wrap_content" android:textSize="16sp"/>
                    <TextView android:id="@+id/tv_delivery"
                        android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="â‚¹0.0"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#CCCCCC"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <TextView android:text="Total Payable" android:textStyle="bold"
                        android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"
                        android:textSize="18sp"/>
                    <TextView android:id="@+id/tv_total"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="â‚¹0.0" android:textStyle="bold" android:textSize="18sp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Buttons -->
        <Button
            android:id="@+id/btn_confirm_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âœ… Confirm Payment"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btn_back_to_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â¬… Back to Main Menu"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:padding="10dp"/>
    </LinearLayout>
</ScrollView>
