<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg_main">

    <!-- Title -->
    <TextView
        android:id="@+id/menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What are you in mood to have today?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginBottom="16dp" />

    <!-- Search -->
    <AutoCompleteTextView
        android:id="@+id/search_dishes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search food..."
        android:completionThreshold="1"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="16dp" />

    <!-- Popular Foods -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â­ Popular Foods"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/popular_pizza"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/pizza"
                android:contentDescription="Pizza"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="12dp" />

            <ImageView
                android:id="@+id/popular_burger"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/burger"
                android:contentDescription="Burger"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="12dp" />

            <ImageView
                android:id="@+id/popular_sushi"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/sushi"
                android:contentDescription="Sushi"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Slider Tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@android:color/black"
        app:tabSelectedTextColor="@android:color/black"
        app:tabTextColor="#888" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Bottom Buttons -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back" />

        <Button
            android:id="@+id/btn_go_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to Cart"
            android:layout_marginStart="16dp" />
    </LinearLayout>
</LinearLayout>
